{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dnszones": {
            "defaultValue": "mailhub.com",
            "type": "String"
        },
        "vm_name": {
            "defaultValue": "mail-hub-vm",
            "type": "String"
        },
        "sshPublicKey_name": {
            "defaultValue": "mail-hub-vm-key",
            "type": "String"
        },
        "sshPublicKey_value": {
            "defaultValue": "none",
            "type": "String"
        },
        "virtualNetwork_name": {
            "defaultValue": "mail-hub-vnet",
            "type": "String"
        },
        "networkInterface_name": {
            "defaultValue": "mail-hub-vm-ni",
            "type": "String"
        },
        "publicIPAddresse__name": {
            "defaultValue": "mail-hub-vm-ip",
            "type": "String"
        },
        "networkSecurityGroup_name": {
            "defaultValue": "mail-hub-vm-nsg",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/sshPublicKeys",
            "apiVersion": "2021-07-01",
            "name": "[parameters('sshPublicKey_name')]",
            "location": "westeurope",
            "properties": {
                "publicKey": "[parameters('sshPublicKey_value')]"
            }
        },
        {
            "type": "Microsoft.Network/dnszones",
            "apiVersion": "2018-05-01",
            "name": "[parameters('dnszones')]",
            "location": "global",
            "properties": {
                "zoneType": "Public"
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-11-01",
            "name": "[parameters('networkSecurityGroup_name')]",
            "location": "westeurope",
            "properties": {
                "securityRules": [
                    {
                        "name": "SSH",
                        "properties": {
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 300,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    },
                    {
                        "name": "Port-25-Inbound",
                        "properties": {
